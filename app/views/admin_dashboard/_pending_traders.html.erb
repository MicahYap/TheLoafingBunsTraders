<%@pending_traders.each do |trader| %>
  <div class= 'mb-6 p-4 bg-white shadow-md rounded-md px-9'>
    <p>
      <strong>Email:</strong>
      <%= trader.email %>
    </p>

    <p>
    <strong>Birthday:</strong>
    <%= trader.birthday %>
    </p>

    <p>
    <strong>Gender:</strong>
    <%= trader.gender %>
    </p>

    <p>
    <strong>Address:</strong>
    <%= trader.address %>
    </p>

    <p>
    <strong>Cellphone Number:</strong>
    <%= trader.cp_number %>
    </p>
  
   <div class= "flex space-x-4 pt-3"> 
      <%= button_to 'Approve', approve_admin_dashboard_path(trader), method: :patch, class: 'px-6 py-2 bg-rose-400 text-white font-semibold rounded-md hover:bg-green-400' %>
      <%= button_to 'Deny', deny_admin_dashboard_path(trader), method: :delete, class: 'px-6 py-2 bg-rose-800 text-white font-semibold rounded-md hover:bg-red-600' %>
    </div>
  </div>
<% end %>

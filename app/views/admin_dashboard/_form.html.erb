<%= form_with(model: trader, url: admin_dashboard_index_path, method: :post, local: true) do |form| %>
  <% if trader.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(trader.errors.count, "mistake") %> prohibited this trader from being saved:</h2>
      <ul>
        <% trader.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit 'Create Trader' %>
  </div>
<% end %>

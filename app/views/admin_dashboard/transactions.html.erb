<% if @transactions.present? %>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 bg-white shadow-md rounded-md">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Price</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Remaining Balance</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transaction Type</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @transactions.each do |transaction| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= transaction.stock.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= number_to_currency(transaction.stock.price) %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= number_to_currency(transaction.balance) %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= transaction.transaction_type %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <h1 class="text-center text-gray-500">No Transactions</h1>
<% end %>
<%= link_to 'Back to Dashboard', admin_dashboard_index_path, class: 'text-indigo-500 hover:text-indigo-600' %>

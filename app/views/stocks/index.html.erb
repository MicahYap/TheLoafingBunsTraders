<p style="color: green"><%= notice %></p>

<% content_for :title, "Stocks" %>

<h1>Stocks</h1>

<div id="stocks">
  <table>
    <thead>
      <tr>
        <th>Stock Name</th>
        <th>Ticker</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @stocks.each do |stock| %>
        <tr>
          <td><%= stock.name %></td>
          <td><%= stock.ticker %></td>
          <td>
            <%= link_to "Show this stock", stock_path(stock) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

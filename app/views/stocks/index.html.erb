<div class="flex items-center justify-center bg-cyan-400 min-h-screen w-screen overflow-auto">
  <div class="w-full max-w-4xl p-8 bg-white shadow-md rounded-lg">
    <p class="text-green-500 mb-4"><%= notice %></p>

    <% content_for :title, "Stocks" %>

    <h1 class="text-2xl font-bold mb-6 text-center">Stocks</h1>

    <div id="stocks">
      <table class="min-w-full bg-white border border-gray-300 rounded-md shadow-sm">
        <thead>
          <tr>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 font-medium text-gray-600 uppercase tracking-wider">Stock Name</th>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 font-medium text-gray-600 uppercase tracking-wider">Ticker</th>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 font-medium text-gray-600 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @stocks.each do |stock| %>
            <tr class="border-b">
              <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-700"><%= stock.name %></td>
              <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-700"><%= stock.ticker %></td>
              <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5">
                <%= link_to "Show this stock", stock_path(stock), class: 'text-indigo-500 hover:text-indigo-600' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="mt-6 flex items-center justify-between">
        <%=link_to 'Back to Portfolio', trader_stocks_path, class: 'text-indigo-500 hover:text-indigo-600'%>
      </div>

    </div>
  </div>
</div>

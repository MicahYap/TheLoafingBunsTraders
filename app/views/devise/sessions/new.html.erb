<html>
  <body class="bg-pink-300 h-screen w-full p-0 m-0">
    <p class='flex justify-center text-4xl font-bold pt-10 text-fuchsia-950'>The Loafing Buns Traders</p>
    <div class='flex items-center justify-center'>
      <div class="w-full max-w-md p-8 bg-white shadow-md rounded-lg  mt-20">
        <h2 class="text-2xl font-bold mb-6 text-center">Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :email, class: "block text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="mb-4">
            <%= f.label :password, class: "block text-gray-700" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-4 flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-gray-700" %>
            </div>
          <% end %>

          <div class="flex items-center justify-between">
            <%= f.submit "Log in", class: "bg-indigo-500 text-white px-4 py-2 rounded-md hover:bg-indigo-600" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </body>
</html>